begin
  require 'fizzbuzz'
rescue LoadError
  require 'rubygems'
  require 'fizzbuzz'
end

DEFAULT_START = 1
DEFAULT_STOP  = 100

if ARGV.include?('-h')
  puts <<-EOS
Prints FizzBuzz starting from #{DEFAULT_START} to #{DEFAULT_STOP} or a given stop value.
  EOS
  exit 1
end

size = ARGV.shift || DEFAULT_STOP
size = size.to_i.abs

exit if size == 0

FizzBuzz.fizzbuzz(DEFAULT_START, size) {|i| puts i }

# vim: set ts=2 sw=2 sts=2 et :
# encoding: utf-8
